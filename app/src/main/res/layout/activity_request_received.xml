    <!--            android:layout_height="wrap_content"-->
    <!--            android:drawableStart="@drawable/ic_details_black_24dp"-->
    <!--            android:paddingBottom="40dp">-->

    <!--            <com.google.android.material.textfield.TextInputEditText-->
