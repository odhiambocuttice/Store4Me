<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".RequestActivity">

    <ProgressBar
        android:id="@+id/loadingAddLoc"

        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/logo_picture"
            android:layout_width="81dp"
            android:layout_height="108dp"
            android:paddingBottom="10dp"
            android:src="@drawable/shelves"
            android:transitionName="logo_image" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#0000"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:text="Backpack Details of"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/txtBackpackNameID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#0000"
                android:drawableStart="@drawable/user"
                android:drawablePadding="20dp"
                android:padding="16dp"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:background="#0000"
            android:drawablePadding="16dp"
            android:text="Our Store"
            android:textSize="26sp" />


        <TextView
            android:id="@+id/txtShopNameID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#0000"
            android:drawableStart="@drawable/ic_store_black_24dp"
            android:drawablePadding="20dp"
            android:padding="16dp"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_details_black_24dp"
            android:hint="Enter Your Backpack Contents"
            android:paddingBottom="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/BackpackDetails"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:textColor="#1f1f1d" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/finish_request_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1f1f1d"
            android:paddingBottom="20dp"
            android:text="Finish Your Request"
            android:textColor="#fff" />

        <Button
            android:id="@+id/call_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1f1f1d"
            android:text="Call "
            android:textColor="#fff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp">


        <Button
            android:id="@+id/direction_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:text="Find Direction"
            android:textColor="#000"
            android:visibility="invisible" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>